set number
set relativenumber
set ruler
set ignorecase
set hlsearch
set incsearch


set showmatch
set mat=2

set expandtab " Use spaces instead of tabs
set smarttab 

" 1 tab == 4 spaces
set shiftwidth=4
set tabstop=4

set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines


syntax enable
" Disable highlight when <leader><cr> is pressed
map <silent> <leader><cr> :noh<cr>

	"let mapleader = ","
