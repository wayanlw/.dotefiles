#
# wm independent hotkeys
#
# --------------- Launchers
alt + d 
    dmenu_run -i -l 10

# rofi commands
alt + {q,z}
    rofi -{combi-modi window#drun -theme solarized -font "hack 10" -show combi -icon-theme "Papirus" -show-icons,show window -theme solarized -font "hack 10" -show combi -icon-theme "Papirus" -show-icons}

# --------------- terminal emulator
alt + Return
    alacritty

alt + shift + Return
    alacritty -e tmux

# --------------- program launcher

# --------------- make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

	
# --------------- kill window 
alt + shift + q
    wmctrl -c :ACTIVE:
    #xkill 

# --------------- switchr
alt + shift + t
    alacritty -e sh ~/.dotfiles/ww-scripts/switchr.sh

# --------------- run-or-raise
alt + shift + f
    wmctrl -x -a brave || brave 

alt + shift + x
    wmctrl -x -a pcmanfm || pcmanfm 

alt + shift + d
    wmctrl -x -a $code || $code

alt + shift + a
    wmctrl -x -a alacritty || alacritty


# --------------- websearch  
super + s 
    ~/.dotfiles/ww-scripts/websearch.sh && wmctrl -x -a brave

# --------------- clipmenu
ctrl + alt + v
    clipmenu

# --------------- screenshot with flameshot
super + shift + s
    flameshot gui

# --------------- app launcher
super + w; {b,a,c}
    {brave,alacritty,code}


